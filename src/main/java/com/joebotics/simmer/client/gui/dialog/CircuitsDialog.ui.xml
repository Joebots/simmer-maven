<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client">
    <ui:with field='i18n' type='com.joebotics.simmer.client.util.I18N'/>
    <ui:style>
    </ui:style>
    <ma:window.MaterialWindow ui:field="modal" title="{i18n.Circuits}" toolbarColor="GREEN" styleName="shifted-window">
        <m:MaterialRow>
            <m:MaterialColumn grid="s10">
                <ma:tree.MaterialTree ui:field="circuitsTree" fontSize="1.2em">
                </ma:tree.MaterialTree>
            </m:MaterialColumn>
            <m:MaterialColumn grid="s2">
                <m:MaterialButton ui:field="btnCollapse" waves="LIGHT" size="MEDIUM" text="Collapse" marginTop="8"
                                  iconType="VERTICAL_ALIGN_CENTER" grid="s12"/>

                <m:MaterialButton ui:field="btnExpand" waves="LIGHT" size="MEDIUM" text="Expand" marginTop="8"
                                  iconType="ZOOM_OUT_MAP" grid="s12"/>

                <m:MaterialButton ui:field="btnImport" waves="LIGHT" size="MEDIUM" text="Open" marginTop="8"
                                  iconType="FOLDER_OPEN" grid="s12"/>

                <m:MaterialButton ui:field="btnExport" waves="LIGHT" size="MEDIUM" iconType="SAVE" text="Save" grid="s12"
                                  marginTop="8"/>
            </m:MaterialColumn>
        </m:MaterialRow>
    </ma:window.MaterialWindow>
</ui:UiBinder>
