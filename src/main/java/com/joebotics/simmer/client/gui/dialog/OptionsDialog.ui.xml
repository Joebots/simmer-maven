<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui" xmlns:ma="urn:import:gwt.material.design.addins.client">

    <ui:with field='i18n' type='com.joebotics.simmer.client.util.I18N'/>
    <ui:import field="com.joebotics.simmer.client.util.OptionKey.*"/>

    <ma:window.MaterialWindow ui:field="modal" title="{i18n.Options}" toolbarColor="GREEN"
                              styleName="shifted-window">
        <m:MaterialRow margin="8">
            <m:MaterialTab backgroundColor="WHITE" ui:field="optionTabs">
                <m:MaterialTabItem waves="LIGHT" grid="s2">
                    <m:MaterialLink text="{i18n.Emulator}" href="#emulatorTab" styleName="active"/>
                </m:MaterialTabItem>
                <m:MaterialTabItem waves="LIGHT" grid="s2">
                    <m:MaterialLink text="{i18n.Breadboard}" href="#breadboardTab"/>
                </m:MaterialTabItem>
                <m:MaterialTabItem waves="LIGHT" grid="s2">
                    <m:MaterialLink text="{i18n.Hardware}" href="#hardwareTab"/>
                </m:MaterialTabItem>
            </m:MaterialTab>
            <m:MaterialColumn m:id="emulatorTab" grid="s12" height="100%">
                <g:HTMLPanel  styleName="row">
                    <m:MaterialLabel text="{i18n.Simulation_Speed}"/>
                    <g:HTMLPanel styleName="col" width="7%" height="70px">
                        <m:MaterialButton ui:field="removeFromSpeed" style="margin-top:20px" type="FLOATING" waves="LIGHT"
                                          size="MEDIUM"
                                          iconType="REMOVE" width="100%">
                        </m:MaterialButton>
                    </g:HTMLPanel>
                    <m:MaterialRange ui:field="speedBar" styleName="col" width="86%" min="0" max="260" value="3"/>
                    <g:HTMLPanel styleName="col" width="7%" height="70px">
                        <m:MaterialButton ui:field="addToSpeed" style="margin-top:20px" styleName="bottomCenter"
                                          width="100%" type="FLOATING" waves="LIGHT" size="MEDIUM"
                                          iconType="ADD">
                        </m:MaterialButton>
                    </g:HTMLPanel>
                </g:HTMLPanel>
                <g:HTMLPanel styleName="row">
                    <m:MaterialLabel text="{i18n.Current_Speed}"/>
                    <g:HTMLPanel styleName="col" width="7%" height="70px">
                        <m:MaterialButton ui:field="removeFromCurrent" style="margin-top:20px" type="FLOATING" waves="LIGHT"
                                          size="MEDIUM"
                                          iconType="REMOVE" width="100%">
                        </m:MaterialButton>
                    </g:HTMLPanel>
                    <m:MaterialRange ui:field="currentBar" styleName="col" width="86%" min="1" max="100" value="50"/>
                    <g:HTMLPanel styleName="col" width="7%" height="70px">
                        <m:MaterialButton ui:field="addToCurrent" style="margin-top:20px" styleName="bottomCenter"
                                          width="100%" type="FLOATING" waves="LIGHT" size="MEDIUM"
                                          iconType="ADD">
                        </m:MaterialButton>
                    </g:HTMLPanel>
                </g:HTMLPanel>

                <m:MaterialCheckBox ui:field="showCurrentCheckItem" text="{i18n.Show_Current}"
                                    name="{SHOW_CURRENT.name}"/>
                <m:MaterialCheckBox ui:field="showVoltageCheckItem" text="{i18n.Show_Voltage}"
                                    name="{SHOW_VOLTAGE.name}"/>
                <m:MaterialCheckBox ui:field="showPowerCheckItem" text="{i18n.Show_Power}" name="{SHOW_POWER.name}"/>
                <m:MaterialCheckBox ui:field="showValuesCheckItem" text="{i18n.Show_Values}" name="{SHOW_VALUES.name}"/>
                <m:MaterialCheckBox ui:field="smallGridCheckItem" text="{i18n.Small_Grid}" name="{SMALL_GRID.name}"/>
                <m:MaterialCheckBox ui:field="euroResistorCheckItem" text="{i18n.European_Resistors}"
                                    name="{EURO_RESISTORS.name}"/>
                <m:MaterialCheckBox ui:field="backgroundCheckItem" text="{i18n.White_Background}"
                                    name="{WHITE_BACKGROUND.name}"/>
                <m:MaterialCheckBox ui:field="conventionCheckItem" text="{i18n.Conventional_Current_Motion}"
                                    name="{CONVENTIONAL_CURRENT_MOTION.name}"/>
            </m:MaterialColumn>
            <m:MaterialColumn m:id="breadboardTab" grid="s12" height="100%">
                <m:MaterialRow margin="8">
                    <m:MaterialColumn grid="s11" height="100%">
                        <m:MaterialSwitch ui:field="showBreadboardBanks" onLabel="{i18n.showBreadboardBanks}"/>
                        <g:HTMLPanel styleName="row">
                            <m:MaterialLabel text="{i18n.breadboardWidth}"/>
                            <g:HTMLPanel styleName="col" width="7%" height="70px">
                                <m:MaterialButton ui:field="removeBreadBoardWidth" style="margin-top:35px"
                                                  type="FLOATING" waves="LIGHT" size="MEDIUM"
                                                  iconType="REMOVE" width="100%">
                                </m:MaterialButton>
                            </g:HTMLPanel>
                            <m:MaterialRange ui:field="breadboardWidth" min="300" max="400" styleName="col"
                                             width="80%"/>
                            <g:HTMLPanel styleName="col" width="7%" height="70px">
                                <m:MaterialButton ui:field="addBreadBoardWidth" style="margin-top:35px"
                                                  styleName="bottomCenter" width="100%" type="FLOATING" waves="LIGHT"
                                                  size="MEDIUM"
                                                  iconType="ADD">
                                </m:MaterialButton>
                            </g:HTMLPanel>
                        </g:HTMLPanel>


                        <g:HTMLPanel styleName="row">
                            <m:MaterialLabel text="{i18n.breadboardHeight}"/>
                            <g:HTMLPanel styleName="col" width="7%" height="70px">
                                <m:MaterialButton ui:field="removeBreadBoardHeight" style="margin-top:35px"
                                                  type="FLOATING" waves="LIGHT" size="MEDIUM"
                                                  iconType="REMOVE" width="100%">
                                </m:MaterialButton>
                            </g:HTMLPanel>
                            <m:MaterialRange ui:field="breadboardHeight" min="400" max="700" styleName="col"
                                             width="80%"/>
                            <g:HTMLPanel styleName="col" width="7%" height="70px">
                                <m:MaterialButton ui:field="addBreadBoardHeight" style="margin-top:35px"
                                                  styleName="bottomCenter" width="100%" type="FLOATING" waves="LIGHT"
                                                  size="MEDIUM"
                                                  iconType="ADD">
                                </m:MaterialButton>
                            </g:HTMLPanel>
                        </g:HTMLPanel>


                        <g:HTMLPanel styleName="row">
                            <m:MaterialLabel text="{i18n.breadboardRowCount}"/>
                            <g:HTMLPanel styleName="col" width="7%" height="70px">
                                <m:MaterialButton ui:field="removeBreadBoardRowCount" style="margin-top:35px"
                                                  type="FLOATING" waves="LIGHT" size="MEDIUM"
                                                  iconType="REMOVE" width="100%">
                                </m:MaterialButton>
                            </g:HTMLPanel>
                            <m:MaterialRange ui:field="breadboardRowCount" min="8" max="40" styleName="col"
                                             width="80%"/>
                            <g:HTMLPanel styleName="col" width="7%" height="70px">
                                <m:MaterialButton ui:field="addBreadBoardRowCount" style="margin-top:35px"
                                                  styleName="bottomCenter" width="100%" type="FLOATING" waves="LIGHT"
                                                  size="MEDIUM"
                                                  iconType="ADD">
                                </m:MaterialButton>
                            </g:HTMLPanel>
                        </g:HTMLPanel>


                        <g:HTMLPanel styleName="row">
                            <m:MaterialLabel text="{i18n.breadboardTopMargin}"/>
                            <g:HTMLPanel styleName="col" width="7%" height="70px">
                                <m:MaterialButton ui:field="removeBreadBoardTopMargin" style="margin-top:35px"
                                                  type="FLOATING" waves="LIGHT" size="MEDIUM"
                                                  iconType="REMOVE" width="100%">
                                </m:MaterialButton>
                            </g:HTMLPanel>
                            <m:MaterialRange ui:field="breadboardTopMargin" min="0" max="120" styleName="col"
                                             width="80%"/>
                            <g:HTMLPanel styleName="col" width="7%" height="70px">
                                <m:MaterialButton ui:field="addBreadBoardTopMargin" style="margin-top:35px"
                                                  styleName="bottomCenter" width="100%" type="FLOATING" waves="LIGHT"
                                                  size="MEDIUM"
                                                  iconType="ADD">
                                </m:MaterialButton>
                            </g:HTMLPanel>
                        </g:HTMLPanel>


                        <g:HTMLPanel styleName="row">
                            <m:MaterialLabel text="{i18n.breadboardLeftMargin}"/>
                            <g:HTMLPanel styleName="col" width="7%" height="70px">
                                <m:MaterialButton ui:field="removeBreadBoardLeftMargin" style="margin-top:35px"
                                                  type="FLOATING" waves="LIGHT" size="MEDIUM"
                                                  iconType="REMOVE" width="100%">
                                </m:MaterialButton>
                            </g:HTMLPanel>
                            <m:MaterialRange ui:field="breadboardLeftMargin" min="0" max="120" styleName="col"
                                             width="80%"/>
                            <g:HTMLPanel styleName="col" width="7%" height="70px">
                                <m:MaterialButton ui:field="addBreadBoardLeftMargin" style="margin-top:35px"
                                                  styleName="bottomCenter" width="100%" type="FLOATING" waves="LIGHT"
                                                  size="MEDIUM"
                                                  iconType="ADD">
                                </m:MaterialButton>
                            </g:HTMLPanel>
                        </g:HTMLPanel>


                        <g:HTMLPanel styleName="row">
                            <m:MaterialLabel text="{i18n.breadboardRowThickness}"/>
                            <g:HTMLPanel styleName="col" width="7%" height="70px">
                                <m:MaterialButton ui:field="removeBreadBoardRowThickness" style="margin-top:35px"
                                                  type="FLOATING" waves="LIGHT" size="MEDIUM"
                                                  iconType="REMOVE" width="100%">
                                </m:MaterialButton>
                            </g:HTMLPanel>
                            <m:MaterialRange ui:field="breadboardRowThickness" min="1" max="15" styleName="col"
                                             width="80%"/>
                            <g:HTMLPanel styleName="col" width="7%" height="70px">
                                <m:MaterialButton ui:field="addBreadBoardRowThickness" style="margin-top:35px"
                                                  styleName="bottomCenter" width="100%" type="FLOATING" waves="LIGHT"
                                                  size="MEDIUM"
                                                  iconType="ADD">
                                </m:MaterialButton>
                            </g:HTMLPanel>
                        </g:HTMLPanel>

                    </m:MaterialColumn>
                    <m:MaterialColumn grid="s1" styleName="center">
                        <m:MaterialButton ui:field="btnSaveConfig" margin="8" type="FLOATING" waves="LIGHT"
                                          size="MEDIUM"
                                          iconType="SAVE" iconPosition="NONE"/>
                        <m:MaterialLabel text="Save" textColor="BLACK" textAlign="CENTER" marginLeft="12"
                                         marginRight="12"/>
                        <m:MaterialButton ui:field="btnResetConfig" margin="8" type="FLOATING" waves="LIGHT"
                                          size="MEDIUM"
                                          iconType="SETTINGS_BACKUP_RESTORE"/>
                        <m:MaterialLabel text="Restore" textColor="BLACK" textAlign="CENTER" marginLeft="4"
                                         marginRight="4"/>
                        <m:MaterialButton ui:field="btnDownloadConfig" margin="8" type="FLOATING" waves="LIGHT"
                                          size="MEDIUM"
                                          iconType="FILE_DOWNLOAD"/>
                        <m:MaterialLabel text="Download" textColor="BLACK" textAlign="CENTER"/>
                        <m:MaterialButton ui:field="btnUploadConfig" margin="8" type="FLOATING" waves="LIGHT"
                                          size="MEDIUM"
                                          iconType="FILE_UPLOAD"/>
                        <m:MaterialLabel text="Upload" textColor="BLACK" textAlign="CENTER" marginLeft="4"
                                         marginRight="4"/>
                    </m:MaterialColumn>
                </m:MaterialRow>
            </m:MaterialColumn>
            <m:MaterialColumn m:id="hardwareTab" grid="s12" height="100%">
            </m:MaterialColumn>
        </m:MaterialRow>
    </ma:window.MaterialWindow>
</ui:UiBinder>
