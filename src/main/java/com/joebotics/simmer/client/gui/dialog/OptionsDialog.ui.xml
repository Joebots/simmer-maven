<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:m="urn:import:gwt.material.design.client.ui">
    <ui:with field='i18n' type='com.joebotics.simmer.client.util.I18N' />

    <ui:style>

    </ui:style>
    <m:MaterialModal ui:field="modal" type="DEFAULT" dismissible="true" inDuration="500" outDuration="500">
        <m:MaterialNavBar>
            <m:MaterialNavBrand float="LEFT" text="Options" />
            <m:MaterialNavSection float="RIGHT">
                <m:MaterialIcon ui:field="btnClose" tooltip="Close" iconType="CLEAR" iconColor="WHITE"
                    circle="true" waves="DEFAULT" />
            </m:MaterialNavSection>
        </m:MaterialNavBar>
        <m:MaterialModalContent>
            <m:MaterialLabel text="{i18n.Simulation_Speed}" />
            <m:MaterialRange min="10" max="50" value="25" />
            <m:MaterialLabel text="{i18n.Current_Speed}" />
            <m:MaterialRange min="10" max="50" value="25" />
            <m:MaterialCheckBox text="{i18n.Conventional_Current_Motion}" />
            <m:MaterialCheckBox text="{i18n.European_Resistors}" />
            <m:MaterialCheckBox text="{i18n.Show_Current}" />
            <m:MaterialCheckBox text="{i18n.Show_Values}" />
            <m:MaterialCheckBox text="{i18n.Small_Grid}" />
            <m:MaterialCheckBox text="{i18n.Show_Voltage}" />
            <m:MaterialCheckBox text="{i18n.Show_Power}" />
            <m:MaterialIntegerBox label="Integer value" />
        </m:MaterialModalContent>
    </m:MaterialModal>
</ui:UiBinder> 